from reportlab.lib.pagesizes import letter
from reportlab.pdfgen import canvas

def generate_pdf(data, output_file):
    """
    Esto genera un archivo pdf con la informacion

    Args:
        data (dict): Diccionario con las claves 'name', 'price', 'quantity', 'fortnight_name',
                     'total_price', 'iva', y 'total_iva_price'.
        output_file (str): Ruta y nombre del archivo PDF a generar. CAMBIAR A UN POP UP EN LA INTERFAZ PARA 
        SELECCIONAR DONDE GUARDAR

    Returns:
        None
    """
    c = canvas.Canvas(output_file, pagesize=letter)
    width, height = letter

    c.setFont("Helvetica", 12)
    c.drawString(50, height - 50, "Reporte de Producto")

    # Se escribe los datos en el pdf
    y = height - 100
    for key, value in data.items():
        c.drawString(50, y, f"{key.capitalize()}: {value}")
        y -= 20  # Ajustar la posición vertical para cada línea

    # Finaliza el documento
    c.save()